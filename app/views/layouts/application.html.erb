<!DOCTYPE html>
<html>
  <head>
    <title>Giventake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  
    <% if current_user %>
    <%= link_to  "About" , "/items/about" %> |
    <%= link_to "Logout", session_path("current"), method: :delete %> |
    <%= link_to "Home", root_path %> |
    <%= link_to "New Post", new_item_path %> |
    <%= link_to "View Posts", items_users_path %> 
    <% else %>
    <%= link_to  "about" , "/items/about" %> |
    <%= link_to "Login", new_session_path %> |
    <%= link_to "Signup", new_user_path %> |
    <%= link_to "home", root_path %> 
    <% end %>
  </header>

  <% if flash[:alert] %>
    <p>Oops - there were problems with your submission. Please fix the following:</p>
    <ul>
      <% [flash[:alert]].flatten.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
    <%= yield %>
  </body>
</html>
