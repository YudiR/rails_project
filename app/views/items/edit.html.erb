
<div class ="title">
<h1  class="display-3 text-primary"> Edit Post <h1>
</div>

<br/> <br/> <br/>

<div class = "container">
<%= form_for @item, :html=> {:onsubmit => "return validateItem()"} do |f| %>
  
  <div class = "titleNew"></div>  
  <div>
      <%= f.label :Title %>
      <%= f.text_field :title %>
    </div>

    <div class = "locationNew"></div>
    <div>
    <%= f.label :Location %>
    <%= f.text_field :location %>
    </div>

    <%=f.label :Update_Image %>
    <%= f.hidden_field :image, value: @item.cached_image_data%>
    <%= f.file_field :image%>
    <br/>
    <% if @item.image_data? %>
    Remove Present Image: <%= f.check_box :remove_image %>
    <% end %>
    <br/>
    <div>
      <%= f.label :Category %>
      <%= f.select(:category, options_for_select([['Electronics', 'Electronics'], ['Jewelry', "Jewelry"], ['Kitchen', 'Kitchen'], ['Womens Clothing', 'Womens_Clothing'],['Mens Clothing', 'Mens_Clothing'],['Watches', 'Watches'], ['Sports And Outdoors', 'Sports_And_Outdoors'], ['Other', 'Other']])) %>
    </div>

    <div class = "priceNew"></div>
    <div>
    <%= f.label :Price %>
    <%= f.text_field :price_cents %>
  </div>

  <div class = "descriptionNew"></div>
    <div>
      <%= f.label :Description %>
      <%= f.text_area :description %>
    </div>
  
    <%= f.submit data: { disable_with: false }  %>
  <% end %>

  </div>