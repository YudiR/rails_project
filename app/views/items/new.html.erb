<%= form_for @item do |f| %>
    <div>
      <%= f.label :Title %>
      <%= f.text_field :title %>
    </div>

    <div>
    <% if @item.image.present?%>
    <%= image_tag @item.image_url
    <% end%>
    </div>

    <div> 
    <%=f.label :image %>
    <%= f.hidden_field :image, value: @item.cached_image_data%>
    <%= f.file_field :image%>
    </div>

    <div>
      <%= f.label :Location %>
      <%= f.text_field :location %>
    </div>

    <div>
      <%= f.label :Category %>
      <%= f.text_field :category %>
    </div>

    <div>
    <%= f.label :Price %>
    <%= f.text_field :price_cents %>
  </div>

    <div>
      <%= f.label :Description %>
      <%= f.text_area :description %>
    </div>
  
    <%= f.submit %>
  <% end %>
  